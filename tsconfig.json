{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "noEmit": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "sourceMap": true,
    // "strict": true,
    "target": "ES2021",
    "incremental": true,                      /* Save .tsbuildinfo files to allow for incremental compilation of projects. */
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [ "src" ]
}
